@model EditRoleViewModel

@{
    ViewData["Title"] = "Modifier Role";
}

<div class="container">
    <div class="login-wrap">
        <div class="login-content">
           
            <div class="login-form">
                <form method="post">
                    <div class="form-group">
                        <input disabled asp-for="Id" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="RoleName" class="control-label mb-1"></label>
                        <input id="cc-pament" asp-for="RoleName" class="form-control">
                    </div>
                    <div>
                        <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                            <i class="fa fa-tags fa-sm"></i>&nbsp;
                            <span id="payment-button-amount">Modifier Role</span>
                        </button>
                    </div>
                </form>
                <hr />
                <div class="alert alert-danger text text-danger" asp-validation-summary="All" role="alert">
                </div>
            </div>
        </div>
    </div>
    <hr />
   @if (Model.Users.Count == 0)
    {
        <div class="alert alert-dark">
            <p>Ce Role ne possede aucun Utilisateur</p>
        </div>
        <div class="card-body">
            <a asp-controller="Administration" asp-action="List" class="btn-sm btn-danger">Retourner a la liste des Roles</a>
            @* <a asp-controller="Administration" asp-action="List" class="btn-sm btn-dark">Tous les Utilisateurs</a> *@
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">All Users</h5>
            </div>
            <ul class="list-group list-group-flush">
                @foreach (string userEmail in Model.Users)
                {
                    <li class="list-group-item">@userEmail</li>
                }
            </ul>
            <div class="card-body">
                <a asp-controller="Contact" asp-action="Index" class="btn-sm btn-danger">Back To List</a>
            </div>
        </div>
    } 

</div>


