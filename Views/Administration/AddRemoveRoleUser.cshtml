@model List<AddRemoveUserRole>

@{
    ViewData["Title"] = "Gerer les roles des Utilisateurs";
}

<div class="container mt-10">
    <section class="au-breadcrumb2">
        <div class="container">
             <div class="row">
        <div class="col-sm-3">
        </div>
        <div class="col-sm-6">
            <form method="post">
                <div class="card">
                    <div class=" card-header">
                      Lier ou deconnecter un Role a un Utilisateur
                        <hr />
                        <input disabled value="@ViewBag.Role" class="form-control" />
                        <hr />
                        <div class="alert alert-dark">@ViewBag.Name</div>
                    </div>

                    <div class="card-body">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <input hidden asp-for="@Model[i].UserId" />
                            <input hidden asp-for="@Model[i].UserName" />
                            <div class="form-check">
                                <input asp-for="@Model[i].IsSelected" id="@i" class="form-check-input" />
                                <label for="@i" asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].UserName</label>
                            </div>
                        }
                    </div>

                    <div class="card-footer">
                        <button class="btn-sm btn-primary">Validate</button>
                        <a asp-action="List"  class="btn-sm btn-dark">Liste des Roles</a>
                    </div>
                </div>
                <div asp-validation-summary="All" class="text text-danger"></div>
            </form>
        </div>
        <div class="col-sm-3">
        </div>
    </div>
        </div>
    </section>
</div>