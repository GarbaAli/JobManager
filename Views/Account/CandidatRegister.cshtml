@model CandidatRegisterViewModel

@{
    ViewData["Title"] = "Register Candidat";
}

<div class="container">
    <div class="login-wrap">
        <div class="login-content">
            <div class="login-logo">
                <a href="#">
                    <img src="~/images/icon/logo.png" alt="CoolAdmin">
                </a>
            </div>
            <div class="login-form">
                <form asp-action="CandidatRegister" method="post">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName"></label>
                            <input type="text" class="form-control" asp-for="FirstName">
                            <span class="small text-danger" asp-validation-for="FirstName"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName"></label>
                            <input type="text" class="form-control" asp-for="LastName">
                            <span class="small text-danger" asp-validation-for="LastName"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Pseudo"></label>
                        <input class="au-input au-input--full" asp-for="Pseudo" placeholder="Votre Pseudonyme">
                        <span class="small text-danger" asp-validation-for="Pseudo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input class="au-input au-input--full" asp-for="Email" placeholder="Email">
                        <span class="small text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input class="au-input au-input--full" asp-for="Password" placeholder="Password">
                        <span class="small text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ConfirmPassword"></label>
                            <input class="form-control" asp-for="ConfirmPassword">
                            <span class="small text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Experience"></label>
                            <input class="form-control" asp-for="Experience">
                            <span class="small text-danger" asp-validation-for="Experience"></span>
                        </div>
                    </div>

                    <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">sign Up</button>
                    <div class="social-login-content">
                        <div class="social-button">
                            <button class="au-btn au-btn--block au-btn--blue m-b-20">sign in with facebook</button>
                            <button class="au-btn au-btn--block au-btn--blue2">sign in with twitter</button>
                        </div>
                    </div>
                </form>
                <div class="register-link">
                    <p>
                       you have account?
                        <a asp-action="Login" asp-asp-controller="Account">Login</a>
                    </p>
                </div><hr />
                <div class="alert alert-danger text text-danger" asp-validation-summary="All" role="alert">
                    @if (ViewData["notif"] != "")
                    {
                        <span>@ViewData["notif"] </span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

