@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="#">
                    <img src="~/images/icon/logo.png" alt="CoolAdmin">
                            </a>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input class="au-input au-input--full" asp-for="Email" placeholder="Email">
                                     <span class="small text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input class="au-input au-input--full" asp-for="Password" placeholder="Password">
                                    <span class="small text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="login-checkbox">
                                    <label>
                                        <input type="checkbox" asp-for="Remember">Remember Me
                                    </label>
                                    <label>
                                        <a href="#">Forgotten Password?</a>
                                    </label>
                                </div>
                                <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">sign in</button>
                                <div class="social-login-content">
                                    <div class="social-button">
                                        <button class="au-btn au-btn--block au-btn--blue m-b-20">sign in with facebook</button>
                                        <button class="au-btn au-btn--block au-btn--blue2">sign in with twitter</button>
                                    </div>
                                </div>
                            </form>
                            <div class="register-link">
                                <p>
                                    Don't you have account?
                                    <a asp-action="CandidatRegister" asp-asp-controller="Account">Sign Up Here</a>
                                </p>
                            </div><hr />
                             <div class="alert alert-danger text text-danger" asp-validation-summary="All" role="alert">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
